<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 4. Accessibility button -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearAccess"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/BtnAccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color_primary"
                android:textSize="18sp"
                android:text="@string/Intro_Access"/>
            <TextView
                android:id="@+id/TxtViewClick4"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/Intro_Click"/>
        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/BtnAD"
            android:text="Show AD"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>
